include ../like-button/like-button.pug

mixin feedback(options)
  -
    const { 
      src, 
      name, 
      date,
      text, 
      count = '12', 
      isPressed = true 
    } = options || {};

  article.feedback 
    img.feedback__img(src=src, alt="фото автора")
    .feedback__header
      h3.feedback__author-name= name
      p.feedback__date= date
    .feedback__like-button
      +like-button({ count: count, isPressed: isPressed })
    p.feedback__text= text
