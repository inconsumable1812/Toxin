include ../dropdown/dropdown.pug

mixin dateDropdown(options)
  - var calendarClass = 'js-calendar_content'
  - calendarClass += options.isExpanded ? ' js-calendar_content_expanded' : ''

  div.dateDropdown(class= 'dateDropdown_' + options.type, id=options.id )
    if (options.type === 'double')
      div.dateDropdown__group_double
        div.dateDropdown__item 
          span.dateDropdown__title= options.title
          div.dateDropdown__dropdownBox
            +dropdown({name:"field-date-from", placeholder:"ДД.ММ.ГГГГ", type: "date", calendar:true})
        div.dateDropdown__item 
          span.dateDropdown__title= options.title
          div.dateDropdown__dropdownBox
            +dropdown({name:"field-date-to", placeholder:"ДД.ММ.ГГГГ", type: "date", calendar:true})
    if (options.type === "single")
      div.dateDropdown__group_single
        div.dateDropdown__item
          span.dateDropdown__title= options.title
          div.dateDropdown__dropdownBox
            +dropdown({name:"date-filter", placeholder:"ДД.ММ.ГГГГ", type: "date", calendar:true})
    div.dropdown__calendar_content(class= calendarClass)