include ../dropdown/dropdown.pug

mixin dateDropdown(options)
  -
    const {isExpanded, hidden, type, titleStart, titleEnd, title} = options || {}

  - const mainClass = 'dateDropdown_' + type
  - const JSMainClass = ' js-dateDropdown js-' + mainClass
  - let calendarClass = 'js-calendar_content'
  - calendarClass += isExpanded ? ' js-calendar_content_expanded' : ''
  - calendarClass += hidden ? ' disabled' : ''

  div.dateDropdown(class= mainClass + JSMainClass )
    if (type === 'double')
      div.dateDropdown__group_double
        div.dateDropdown__item
          span.dateDropdown__title= titleStart
          div.dateDropdown__dropdownBox.js-dateDropdown__dropdownBox
            +dropdown({name:"field-date-from", placeholder:"ДД.ММ.ГГГГ", type: "date", calendar:true})
        div.dateDropdown__item 
          span.dateDropdown__title= titleEnd
          div.dateDropdown__dropdownBox.js-dateDropdown__dropdownBox
            +dropdown({name:"field-date-to", placeholder:"ДД.ММ.ГГГГ", type: "date", calendar:true})
    if (type === "single")
      div.dateDropdown__group_single
        div.dateDropdown__item
          span.dateDropdown__title= title
          div.dateDropdown__dropdownBox.js-dateDropdown__dropdownBox
            +dropdown({name:"date-filter", placeholder:"ДД.ММ.ГГГГ", type: "date", calendar:true})
    div.dropdown__calendar_content(class= calendarClass)