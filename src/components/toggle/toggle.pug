mixin toggle(options)
  - const { header, rows = [] } = options || {};

  .toggle
    if header
      .toggle__header= header
    ul.toggle__list
      each row in rows
        - const { name, caption } = row;
        li.toggle__items
          label.toggle__label
            input.toggle__input(type="checkbox", name=name)
            span.toggle__checkbox 
            span.toggle__caption= caption
