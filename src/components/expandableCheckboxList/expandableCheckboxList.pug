mixin expandableCheckboxList(options)
  - const {isExpanded, title, rows =[] } = options || {}

  - let mainClass = 'expandableCheckboxList js-expandableCheckboxList'
  - mainClass += isExpanded ? ' expandableCheckboxList_expanded' : ''
  - const listClass = 'expandableCheckboxList__list'
  - const buttonClass = 'expandableCheckboxList__toggle-button'

  div(class= mainClass)
    div.expandableCheckboxList__header.js-expandableCheckboxList__header
      span.expandableCheckboxList__title=title
      button(class = buttonClass, type='button').material-icons
    ul(class = listClass)
      if rows
        each row in rows
          li.expandableCheckboxList__item
            label.expandableCheckboxList__label
              input.expandableCheckboxList__input(type = "checkbox", name = row.name)
              span.expandableCheckboxList__checkbox
              span.expandableCheckboxList__title= row.title