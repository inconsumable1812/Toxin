extends ../../layout/main.pug

include ../../components/input/input.pug
include ../../components/dropdown/dropdown.pug
include ../../components/dateDropdown/dateDropdown.pug
include ../../components/logo/logo.pug
include ../../components/expandableCheckboxList/expandableCheckboxList.pug
include ../../components/checkbox/checkbox.pug
include ../../components/radioButton/radioButton.pug
include ../../components/toggle/toggle.pug
include ../../components/likeButton/likeButton.pug
include ../../components/rateButton/rateButton.pug
include ../../components/rangeSlider/rangeSlider.pug
include ../../components/button/button.pug
include ../../components/pagination/pagination.pug
include ../../components/richCheckbox/richCheckbox.pug
include ../../components/bulletList/bulletList.pug
include ../../components/info/info.pug
include ../../components/feedback/feedback.pug


block variables
  - var title = "formElements"

block content
  .formElements
    nav.formElements__logo 
      +logo
    .formElements__main
      .formElements__section-first
        .formElements__section-column-start
          .formElements__input-default
            +input({title: "Text Field", type:'email', name:'email', placeholder:'Email', hint:'DEFAULT'})
          .formElements__input-hover
            +input({title: "Text Field", type:'text', name:'This is pretty awesome', placeholder:'Enter the text', hint:'HOVER / FOCUS', value:'This is pretty awesome'})
          .formElements__input-dropdown
            +dropdown({title:"Dropdown", hint:"default", name:"guestNumber", placeholder:"Сколько гостей",type:"guest",rows: [
                {count: 0, text: 'взрослые', typeOfCount:'adult'},
                {count: 0, text: 'дети', typeOfCount:'children'},
                {count: 0, text: 'младенцы', typeOfCount:'baby'},
              ]})
          .formElements__input-email
            +input({title: "MASKED TEXT FIELD",type:'text', name:'text', isData:true})
          .formElements__dropdown-double
            +dateDropdown({title:"Date Dropdown", type:'double',isExpanded:false, id: 'first'})
          .formElements__dropdown-single
            +dateDropdown({title:"Filter date dropdown", type:'single', })
          .formElements__input-with-button
            +input({title: "SUBSCRIPTION TEXT FIELD", type:'email', name:'text', placeholder:'Email', withButton :true})
        .formElements__section-column-gap
        .formElements__section-column-central
          +checkbox({header:'Checkbox Buttons', rows: [
            {title:"Можно курить", name:'smoke'},
            {title:"Можно с питомцами", name:'pet'},
            {title:"Можно пригласить гостей (до 10 человек)", name:'more guests'},
          ]})
          +radioButton({header:"Radio Buttons", rows:[
            {caption:"Мужчина", id:'Men'},
            {caption:"Женщина", id:'Women'},
          ]})
          +toggle({header:'Toggle', rows:[
            {caption:'Получать спецпредложения', name:'special offers'},
            {caption:'Получать спецпредложения', name:'special offers'},
          ]})
          +likeButton({count:'2'})
          +likeButton({count:'12', isPressed: true})
          +rateButton({base:5, rate: 4, isVariable:true, name:'rating'})
          +rateButton({base:5, rate: 5, isVariable:true, name:'rating_1'})
        .formElements__section-column-gap
        .formElements__section-column-end
          +rangeSlider({title:"Range Slider", min:"0", max:"16000"})
          +button({theme:'purple', textTheme:'white', text:'click me'})
          +button({theme:'purple', textTheme:'white', text:'click me', isDisabled:true})
          +button({theme:'white', textTheme:'purple', text:'click me'})       
          +button({theme:'white', textTheme:'purple', text:'click me', isDisabled:true})
          +button({theme:'transparent', textTheme:'purple', text:'click me'})
          +button({theme:'transparent', textTheme:'purple', text:'click me', isTransparentDisabled: true})
          +button({theme:'purple', textTheme:'white', text:'Перейти к оплате', isLarge: true})
          +pagination
      .formElements__section-second
        .formElements__section-column-start
          +dropdown({title:"Dropdown", hint:"default", name:"Number", placeholder:"Количество комнат",rows: [
              {count: 2, text: 'спальни', typeOfCount:'bedroom'},
              {count: 2, text: 'кровати', typeOfCount:'bed'},
              {count: 0, text: 'ванные комнаты', typeOfCount: 'bathroom'},
            ],isExpanded: false, type:"rooms",})
          +dropdown({title:"Dropdown", hint:"default", name:"Number", placeholder:"Количество комнат",rows: [
              {count: 2, text: 'спальни', typeOfCount:'bedroom'},
              {count: 2, text: 'кровати', typeOfCount:'bed'},
              {count: 0, text: 'ванные комнаты', typeOfCount: 'bathroom'},
            ],isExpanded: true1, type:"rooms",})
        .formElements__section-column-central
          +dropdown({title:"Dropdown", hint:"default", name:"guestNumber", placeholder:"Сколько гостей",type:"guest",rows: [
              {count: 0, text: 'взрослые', typeOfCount:'adult'},
              {count: 0, text: 'дети', typeOfCount:'children'},
              {count: 0, text: 'младенцы', typeOfCount:'baby'},
            ],isExpanded: true1})
        .formElements__section-column-end
          +dropdown({title:"Dropdown", hint:"default", name:"guestNumber", placeholder:"Сколько гостей",type:"guest",rows: [
              {count: 0, text: 'взрослые', typeOfCount:'adult'},
              {count: 0, text: 'дети', typeOfCount:'children'},
              {count: 0, text: 'младенцы', typeOfCount:'baby'},
            ],isExpanded: true1})
      .formElements__section-third
        .formElements__section-column-start
          +expandableCheckboxList({title:'expandable checkbox list',isExpanded:false ,rows:[
            {title:"Завтрак", name:'Breakfast'},
            {title:"Письменный стол", name:'Desk'},
            {title:"Стул для кормления", name:'Feeding chair'},
            {title:"Кроватка", name:'Crib'},
            {title:"Телевизор", name:'TV'},
            {title:"Шампунь", name:'Shampoo'},
            {title:"Телевизор", name:'TV1'},
            {title:"Шампунь", name:'Shampoo1'},
          ]})
          +expandableCheckboxList({title:'expandable checkbox list',isExpanded:true ,rows:[
            {title:"Завтрак", name:'Breakfast'},
            {title:"Письменный стол", name:'Desk'},
            {title:"Стул для кормления", name:'Feeding chair'},
            {title:"Кроватка", name:'Crib'},
            {title:"Телевизор", name:'TV'},
            {title:"Шампунь", name:'Shampoo'},
            {title:"Телевизор", name:'TV1'},
            {title:"Шампунь", name:'Shampoo1'},
          ]})
        .formElements__section-column-central
          +richCheckbox({header:'rich Checkbox Buttons', rows:[
            {title:'Широкий коридор', name:'wide corridor', subtitle:'Ширина коридоров в номере не менее 91 см.'},
            {title:'Помощник для инвалидов', name:'Assistant for the disabled', subtitle:'На 1 этаже вас встретит специалист  и проводит до номера.'},
          ]})
        .formElements__section-column-end
          +bulletList({header:'Bullet List', rows:[
            {text:'Нельзя с питомцами'},
            {text:'Без вечеринок и мероприятий'},
            {text:'Время прибытия — после 13:00, а выезд до 12:00'},
          ]})
      .formElements__section-fourth
        .formElements__section-column-start
          +info({title:'Комфорт', subtitle:'Шумопоглощающие стены', icon:'insert_emoticon'})
          +info({title:'Удобство', subtitle:'Окно в каждой из спален', icon:'location_city'})
        .formElements__section-column-central
          +feedback({src: require('./img/murad.png').default, name:'Мурад Сарафанов', date:'5 дней назад', text:'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
