extends ../../layout/pages.pug

include ../../components/chart/chart.pug
include ../../components/bullet-list/bullet-list.pug
include ../../components/info/info.pug
include ../../components/feedback/feedback.pug
include ../../components/booking-form/booking-form.pug

block variables
  - pageClass = 'room-details';

block main
  .room-details__images
    .room-details__box-image 
      //- prettier-ignore
      img.room-details__image(
        src=require('./img/room-details_1.png').default,
        alt= "1 фото номера",
      )
    .room-details__box-image 
      //- prettier-ignore 
      img.room-details__image(
        src=require('./img/room-details_2.png').default,
        alt= "2 фото номера",
      )
    .room-details__box-image
      //- prettier-ignore 
      img.room-details__image(
        src=require('./img/room-details_3.png').default,
        alt= "3 фото номера"
      )
  .room-details__container 
    .room-details__content
      .room-details__about-room
        //- prettier-ignore
        .room-details__info        
          h2.room-details__info-title= 'Сведения о номере'
          +info({ 
            title: 'Комфорт',
            subtitle: 'Шумопоглощающие стены', 
            icon: 'insert_emoticon' 
          })
          +info({ 
            title: 'Удобство', 
            subtitle: 'Окно в каждой из спален', 
            icon: 'location_city' 
          })
          +info({ 
            title: 'Уют', 
            subtitle: 'Номер оснащён камином', 
            icon: 'whatshot' 
          }) 
        .room-details__chart
          h2.room-details__chart-title= 'Впечатления от номера'
          .room-details__chart-item
            +chart
      .room-details__reviews
        .room-details__reviews-header 
          h2.room-details__reviews-title= 'Отзывы посетителей номера'
          p.room-details__reviews-number= '2 отзыва'
        .room-details__reviews-items
          .room-details__reviews-item
            //- prettier-ignore
            +feedback({ 
              src: require('../../assets/img/murad.png').default, 
              name: 'Мурад Сарафанов', 
              date: '5 дней назад',
              text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.' 
            })
          .room-details__reviews-item
            //- prettier-ignore
            +feedback({ 
              src: require('../../assets/img/patricia.png').default, 
              name: 'Патрисия Стёклышкова', date: 'Неделю назад', 
              count:'2', 
              isPressed: false, 
              text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент' 
            })
      .room-details__rules 
        .room-details__bullet-list
          h2.room-details__bullet-list-title= 'Правила'
          //- prettier-ignore 
          +bullet-list({ 
            rows: [
              {
                text: 'Нельзя с питомцами'
              },
              {
                text: 'Без вечеринок и мероприятий'
              },
              {
                text: 'Время прибытия — после 13:00, а выезд до 12:00'
              },
            ]
          })
        .room-details__cancel
          h2.room-details__cancel-title= 'Отмена'
          p.room-details__cancel-description= 'Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.'
      .room-details__booking
        +booking-form
