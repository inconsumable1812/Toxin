extends ../../layout/main.pug

include ../../components/logo/logo.pug
include ../../components/header/header.pug
include ../../components/footer/footer.pug


block variables
  - let title = "Headers & Footers"
  - let theme = "body_theme_gray"

block content
  - const bottomClass = 'headersAndFooters__margin-bottom'
  -
   const auth = {name: 'Юлий', surname: 'Цезарь'}
  -
  
  .headersAndFooters
    nav.headersAndFooters__logo
      +logo
  div(class = bottomClass).headersAndFooters__header
    +header({menuLink})
  div(class = bottomClass).headersAndFooters__header_login
    +header({menuLink, auth})
  div(class = bottomClass).headersAndFooters__footer
    +footer({})
  div.headersAndFooters__footer_size_small
