extends ../../layout/pages.pug

include ../../components/dropdown/dropdown.pug
include ../../components/dateDropdown/dateDropdown.pug
include ../../components/expandableCheckboxList/expandableCheckboxList.pug
include ../../components/checkbox/checkbox.pug
include ../../components/rangeSlider/rangeSlider.pug
include ../../components/pagination/pagination.pug
include ../../components/richCheckbox/richCheckbox.pug
include ../../components/roomSketch/roomSketch.pug
include ../../components/button/button.pug

mixin searchRoom__roomSketch(options = {})
  - 
    const {
      isVip = false, 
      roomNumber='888', 
      cost= '9 990₽', 
      src1=1, 
      src2=2, 
      src3=3, 
      src4=4, 
      base=5, 
      rate=5, 
      feedbackNumber='145', 
      feedbackText = 'Отзывов'} 
      = options || {}

  li.searchRoom__roomSketch-item
    +roomSketch({isVip:isVip, roomNumber:roomNumber, cost:cost, rows:[
    {src: require(`./img/searchRoom_${src1}.png`).default, alt: '1'},
    {src: require(`./img/searchRoom_${src2}.png`).default, alt: '2'},
    {src: require(`./img/searchRoom_${src3}.png`).default, alt: '3'},
    {src: require(`./img/searchRoom_${src4}.png`).default, alt: '4'},
    ], base:base, rate:rate , feedbackNumber: feedbackNumber, feedbackText: feedbackText})


block variables
  - let pageClass = 'searchRoom'

block main
  .searchRoom__container
    .searchRoom__filter 
      button.searchRoom__button-close.material-icons= 'close'
      form.searchRoom__filter-form 
        .searchRoom__calendar
          +dateDropdown({title:"даты пребывания в отеле", type:'single', })
        .searchRoom__dropdownGuest
          +dropdown({title:"Гости", name:"guestNumber", placeholder:"Сколько гостей",type:"guest",rows: [
              {count: 0, text: 'взрослые', typeOfCount:'adult'},
              {count: 0, text: 'дети', typeOfCount:'children'},
              {count: 0, text: 'младенцы', typeOfCount:'baby'},
            ]})
        .searchRoom__rangeSlider
          +rangeSlider({title:"диапазон цены", min:"0", max:"16000", description:'Стоимость за сутки пребывания в номере'})
        .searchRoom__checkbox
          +checkbox({header:'правила дома', rows: [
            {title:"Можно курить", name:'smoke'},
            {title:"Можно с питомцами", name:'pet'},
            {title:"Можно пригласить гостей (до 10 человек)", name:'more guests'},
          ]})
        .searchRoom__richCheckbox
          +richCheckbox({header:'доступность', rows:[
            {title:'Широкий коридор', name:'wide corridor', subtitle:'Ширина коридоров в номере не менее 91 см.'},
            {title:'Помощник для инвалидов', name:'Assistant for the disabled', subtitle:'На 1 этаже вас встретит специалист  и проводит до номера.'},
          ]})
        .searchRoom__dropdownRoom
          +dropdown({title:"удобства номера", name:"Number", placeholder:"Количество комнат",rows: [
          {count: 0, text: 'спальни', typeOfCount:'bedroom'},
          {count: 0, text: 'кровати', typeOfCount:'bed'},
          {count: 0, text: 'ванные комнаты', typeOfCount: 'bathroom'},
          ], type:"rooms",})
        .searchRoom__expandableCheckbox
          +expandableCheckboxList({title:'дополнительные удобства',isExpanded:false ,rows:[
          {title:"Завтрак", name:'Breakfast'},
          {title:"Письменный стол", name:'Desk'},
          {title:"Стул для кормления", name:'Feeding chair'},
          {title:"Кроватка", name:'Crib'},
          {title:"Телевизор", name:'TV'},
          {title:"Шампунь", name:'Shampoo'},
          {title:"Телевизор", name:'TV1'},
          {title:"Шампунь", name:'Shampoo1'},
          ]})
    .searchRoom__result
      div.searchRoom__button-open
        +button({theme:'purple', textTheme:'white', text:'Фильтр', isLarge: true})
      h1.searchRoom__result-title= 'Номера, которые мы для вас подобрали'
      ul.searchRoom__roomSketch-list
        +searchRoom__roomSketch({isVip: true}) 
        +searchRoom__roomSketch({roomNumber:'840', src1: 2, src2: 1, rate: 4, feedbackNumber: '65'}) 
        +searchRoom__roomSketch({isVip: true, roomNumber: '980',cost:'8 500₽', src1: 3, rate: 3, feedbackNumber: '35'}) 
        +searchRoom__roomSketch({roomNumber:'856', cost:'7 300₽', src1: 4, rate: 5, feedbackNumber: '19'}) 
        +searchRoom__roomSketch({roomNumber:'740', cost:'6 000₽', src1: 5, rate: 4, feedbackNumber: '44'})
        +searchRoom__roomSketch({roomNumber:'982', cost:'5 800₽', src1: 6, rate: 3, feedbackNumber: '56'})
        +searchRoom__roomSketch({roomNumber:'678', cost:'5 500₽', src1: 7, rate: 5, feedbackNumber: '45'})
        +searchRoom__roomSketch({roomNumber:'450', cost:'5 300₽', src1: 8, rate: 4, feedbackNumber: '39'})
        +searchRoom__roomSketch({roomNumber:'350', cost:'5 000₽', src1: 9, rate: 3, feedbackNumber: '77'})
        +searchRoom__roomSketch({roomNumber:'666', cost:'5 000₽', src1: 10, rate: 5, feedbackNumber: '25'})
        +searchRoom__roomSketch({roomNumber:'444', cost:'5 000₽', src1: 11, rate: 3, feedbackNumber: '15'})
        +searchRoom__roomSketch({roomNumber:'352', cost:'5 000₽', src1: 12, rate: 3, feedbackNumber: '55'})
        .searchRoom__pagination
          +pagination